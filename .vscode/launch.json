{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/electron/dist/electron.exe",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/electron/dist/electron.exe"
            },
            "args": ["."],
            "outputCapture": "std",
            "sourceMaps": true,
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development" // Set NODE_ENV to "development"
            }
        }
    ]
}
